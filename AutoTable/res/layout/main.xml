<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
        >

    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
            android:orientation="vertical">

        <Button android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:text="@string/create"  android:id="@+id/create"/>

        <Button android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:text="@string/insert" android:id="@+id/insert"/>

        <Button android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:text="@string/delete" android:id="@+id/delete"/>

        <Button android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:text="@string/modify" android:id="@+id/modify"/>

        <Button android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:text="@string/drop" android:id="@+id/drop"/>
    </LinearLayout>
</LinearLayout>

